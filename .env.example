# MySQL basic
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=poly
MYSQL_USER=poly_reader
MYSQL_PASSWORD=your_password

# Optional connection settings
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci
MYSQL_SSL=false
MYSQL_TIMEZONE=+00:00
MYSQL_CONNECT_TIMEOUT_SEC=5
MYSQL_READ_TIMEOUT_SEC=5
MYSQL_WRITE_TIMEOUT_SEC=5

# Optional full URL
DATABASE_URL=mysql://poly_reader:your_password@127.0.0.1:3306/poly

# Optional Redis cache (reduce MySQL reads)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Optional state backend toggle
STATE_BACKEND=redis

# Optional Redis network timeout settings (seconds)
REDIS_CONNECT_TIMEOUT_SEC=5
REDIS_IO_TIMEOUT_SEC=5

# Optional: protect /api/cache-sync (cron prewarm endpoint)
CACHE_SYNC_SECRET=replace_with_a_long_random_secret

# Optional: on-read best-effort incremental sync (for Vercel Hobby without 5m cron)
AUTO_CACHE_SYNC_ON_READ=true
AUTO_CACHE_SYNC_MIN_INTERVAL_SEC=120
